# Application
APP_NAME="Gestion Immobilisations"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Serveur
HOST=0.0.0.0
PORT=8000

# Base de données
DATABASE_URL=postgresql://immobilisations_user:your_password@localhost:5432/immobilisations_db
DB_ECHO=False

# Sécurité
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (optionnel)
REDIS_URL=redis://localhost:6379/0

# Email (pour notifications futures)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
